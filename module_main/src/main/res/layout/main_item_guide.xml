<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/item_iv_guide"
    android:src="@mipmap/ic_main_guide1"
    android:layout_marginTop="90dp"
    android:layout_width="288dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="288dp" />

    <TextView
        android:id="@+id/item_tv_guide_title"
        android:layout_marginTop="13dp"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textSize="20sp"
        android:textColor="@color/black_484848"
        android:text="Global"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:id="@+id/item_tv_guide_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="@color/gray_767676"
        tools:text="Globalasdasdsad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btn_guide_enter"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:textAllCaps="false"
        android:layout_above="@+id/tv_not_now"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_circle_gradient_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="@string/splash_btn_content1" />

    <TextView
        android:id="@+id/tv_not_now"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/gray_767676"
        android:textSize="@dimen/sp_14"
        android:text="@string/splash_btn_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

    <TextView
        android:gravity="center_horizontal"
        android:textSize="11sp"
        android:textColor="@color/gray_c5c5c5"
        android:layout_marginBottom="15dp"
        android:text="@string/splash_bottom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>